<UserControl x:Class="UserControls.FolderButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d">
    <Button Background="{x:Null}" Width="auto" Height="auto">
        <StackPanel>
            <Image Source="/Resources/icon_folder.png" Stretch="None" Width="100" Height="100"/>
            <TextBlock x:Name="foldername" Foreground="White" Text="foldername" TextAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
